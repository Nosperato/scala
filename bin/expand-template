#!/bin/sh

# $Id$

SOURCE="$0";
while [ -h "$SOURCE" ]; do
    LOOKUP="`ls -ld "$SOURCE"`";
    TARGET="`expr "$LOOKUP" : '.*-> \(.*\)$'`";
    if expr "${TARGET:-.}/" : '/.*/$' > /dev/null; then
        SOURCE="${TARGET:-.}";
    else
        SOURCE="`dirname "$SOURCE"`/${TARGET:-.}";
    fi;
done;

scsh -e main -s "$SOURCE.scm" "$@"
