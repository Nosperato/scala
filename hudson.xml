<project name="hudson" default="test_pos">

  <target name="build">
    <ant
      antfile="build.xml"
      target="build"
    />  
  </target>

  <target name="test_pos" depends="build">
    <exec executable="test/scalatest" vmlauncher="no">
      <arg line="--quick --pos"/>
    </exec>
  </target>

  <target name="test_neg" depends="build">
    <exec executable="test/scalatest" vmlauncher="no">
      <arg line="--quick --neg"/>
    </exec>
  </target>

</project>
